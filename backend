
openai.api_key = 'any_api'

email_text = """
Hi Jane, just a reminder that we have the Q3 planning meeting tomorrow at 10 AM 
in the main conference room. Please bring the revised budget report.
"""

prompt = f"""
Summarize the following email in 2-3 bullet points. 
Include any action items or urgency if applicable.

Email:
{email_text}
"""

response = openai.ChatCompletion.create(
    model="gpt-4",
    messages=[{"role": "user", "content": prompt}],
    temperature=0.3
)

print(response['choices'][0]['message']['content'].strip())

